

---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets'
import dance from '../../public/dance.gif';

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<ViewTransitions />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h1>About me <Image src= {dance} alt="dance" width={32} height={32}></h1>
			
			
			<p>
			Hi, I am Guan-Tse. A graduate in IT majoring in software development.
			</p>
				
			<p>
			This website/blog will be mainly used to showcase my current skillsets and other projects I am working on. Thank you for visiting and I hope you have a great day!
			</p>
		</main>
		<Footer />
	</body>
	
</html>
